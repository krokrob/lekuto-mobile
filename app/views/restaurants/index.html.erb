<div class="container pt-1">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center">
        Lekuto Paris
      </h1>
    </div>
    <% @restaurants.each do |restaurant| %>
      <% image_url = "https://kitt.lewagon.com/placeholder/cities/#{@cities.sample}" %>
      <% avatar_url = "https://kitt.lewagon.com/placeholder/users/#{@users.sample}" %>
      <div class="col-xs-12">
        <div class="card mb-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_url %>');">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h2><%= restaurant.name %></h2>
            <p><%= restaurant.address %></p>
          </div>
          <img class="card-user" src="<%= avatar_url %>">
          <%= link_to '', restaurant, class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
